<div class="plant_detail">
  <div id="plant_info">
    <h1><%= @plant.name %></h1>
    <h2>Growing tips</h2>
    <ul><% @plant.tips.each do |tip| %>
        <li><%=tip.info %></li>
      <% end %>
    </ul>
  </div>
  
  <div id="plant_image">
    <img src="/images/kale.png">
  </div>
</div>

<div class="plant_yield">
  <div id="yield_display">
    <p><%=@plant.total %></p>
  </div>
  <div id="add_yield_button">
    <p><a href="/plants/<%=@plant.id%>/edit">ADD TODAY'S PICK</a></p>
  </div>
  <div id="how_much_yield">
    <p>How much have you grown this year?</p>
  </div>
</div>

